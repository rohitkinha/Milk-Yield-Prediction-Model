<%-include("header") -%>
    <div>
        <h1 class="text-center">
            Milk Prediction Model
        </h1>
        <h3 class="text-center">
            Instrinsic Factors
        </h3>
        <div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="form-container" style="background-color:rgb(164, 188, 146);">
                        <form method="post">
                            <div class="row">
                                <% for(var i=0;i<cattle_number;i++){ %>

                                    <div class="text-white form-label">
                                        <p>Enter the details of Catttle <%=i+1%></p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="age" class="form-label text-white">Age of Cattle (in years)</label>
                                        <input required type="number" class="form-control" id="age" name="age">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="breed" class="form-label text-white">Breed</label>
                                        <select class="form-select" id="breed" name="breed">
                                            <option value="">Select Breed</option>
                                            <option value="Murah">Murah</option>
                                            <option value="N.R.">N.R.</option>
                                            <option value="H.F">H.F</option>
                                            <option value="Sahiwal">Sahiwal</option>
                                            <option value="Brown">Brown</option>
                                            <option value="Jersi">Jersi</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="age_calving" class="form-label text-white">Enter the
                                            Age of 1st Calving (in years)</label>
                                        <input required type="number" class="form-control" id="age_calving" name="age_calving">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lactation_number" class="form-label text-white">Enter the Lactation
                                            Number</label>
                                        <input required type="number" class="form-control" id="lactation_number"
                                            name="lactation_number">
                                    </div>
                                    <% } %>

                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </div>


    <%-include("footer") -%>